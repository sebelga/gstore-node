{
  "name": "gstore-node",
  "version": "7.2.4",
  "description": "Mono repo for the gstore-node packages.",
  "author": "SÃ©bastien Loix",
  "scripts": {
    "bootstrap": "bash ./scripts/bootstrap.sh",
    "prebuild": "yarn lint",
    "build": "yarn build:gstore-node && yarn build:datastore-adapter",
    "build:gstore-node": "cd ./packages/gstore-node && yarn build",
    "build:datastore-adapter": "cd ./packages/gstore-datastore-adapter && yarn build",
    "commit": "git-cz",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "cover": "yarn cover:unit && yarn cover:integration && yarn cover:report",
    "cover:unit": "DATASTORE_EMULATOR_HOST=localhost:8081 nyc --exclude-after-remap false yarn test:unit",
    "cover:integration": "nyc --silent --no-clean yarn test:integration",
    "cover:report": "nyc report --reporter=lcov --reporter=html",
    "lint": "./node_modules/eslint/bin/eslint.js ./packages/**/src/**/*.* ./__tests__/**/**/*.ts",
    "local-datastore": "gcloud beta emulators datastore start --consistency=1.0 --no-store-on-disk",
    "release": "yarn build && standard-version",
    "release:gstore-node": "cd ./packages/gstore-node && yarn build",
    "test": "DATASTORE_EMULATOR_HOST=localhost:8081 jest --coverage",
    "test:unit": "jest --c=jest.config.unit.js --coverage",
    "test:integration": "DATASTORE_EMULATOR_HOST=localhost:8081 jest --c=jest.config.integration.js"
  },
  "engines": {
    "node": ">=10.0"
  },
  "keywords": [
    "google datastore",
    "gcloud node",
    "google app engine",
    "node.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sebelga/gstore-node.git"
  },
  "license": "Apache-2.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "arrify": "^2.0.1",
    "dataloader": "^1.4.0",
    "date-fns": "^2.8.1",
    "extend": "^3.0.2",
    "is": "^3.3.0",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "nsql-cache": "^1.1.5",
    "nsql-cache-datastore": "^1.1.6",
    "optional": "^0.1.4",
    "promised-hooks": "^3.1.0",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "@google-cloud/datastore": "^5.0.0",
    "@hapi/joi": "^16.1.8",
    "@types/chai": "^4.2.4",
    "@types/chance": "^1.0.7",
    "@types/hapi__joi": "^16.0.3",
    "@types/jest": "^24.0.21",
    "@types/node": "^12.12.5",
    "@types/sinon": "^7.5.0",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "cache-manager-redis-store": "^1.5.0",
    "chai": "^4.2.0",
    "chance": "^1.1.0",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.7",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-import-resolver-webpack": "^0.12.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "nconf": "^0.10.0",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "sinon": "^7.5.0",
    "standard-version": "^7.0.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3",
    "yargs": "^15.0.2"
  },
  "peerDependencies": {
    "@google-cloud/datastore": ">= 4.2.0 < 5"
  }
}
